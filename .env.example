# 应用配置
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true

# 数据库配置
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_db
DB_USER=postgres
DB_PASSWORD=password
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 数据源配置
TUSHARE_TOKEN=your_tushare_token_here
AKSHARE_ENABLED=true
YAHOO_ENABLED=true

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# JWT配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE_HOURS=24

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_password

# 钉钉/企业微信通知（可选）
DINGTALK_WEBHOOK=
WECHAT_WEBHOOK=