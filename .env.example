# 智能选股系统环境变量配置模板
# 复制此文件为 .env 并根据实际环境修改配置

# 应用配置
STOCK_APP_NAME=智能选股系统
STOCK_APP_VERSION=1.0.0
STOCK_APP_ENV=development
STOCK_APP_PORT=8080
STOCK_APP_DEBUG=true

# 服务器配置
STOCK_SERVER_READ_TIMEOUT=30s
STOCK_SERVER_WRITE_TIMEOUT=30s
STOCK_SERVER_IDLE_TIMEOUT=60s
STOCK_SERVER_MAX_HEADER_BYTES=1048576

# 数据库配置 - MySQL
STOCK_DATABASE_DRIVER=mysql
STOCK_DATABASE_HOST=192.168.1.238
STOCK_DATABASE_PORT=3306
STOCK_DATABASE_NAME=stock
STOCK_DATABASE_USER=root
STOCK_DATABASE_PASSWORD=123456
STOCK_DATABASE_SSL_MODE=disable
STOCK_DATABASE_MAX_OPEN_CONNS=25
STOCK_DATABASE_MAX_IDLE_CONNS=5
STOCK_DATABASE_CONN_MAX_LIFETIME=300s

# Redis配置
STOCK_REDIS_HOST=localhost
STOCK_REDIS_PORT=6379
STOCK_REDIS_PASSWORD=
STOCK_REDIS_DB=0
STOCK_REDIS_POOL_SIZE=10
STOCK_REDIS_MIN_IDLE_CONNS=5

# 日志配置
STOCK_LOG_LEVEL=info
STOCK_LOG_FORMAT=json
STOCK_LOG_FILE=logs/app.log
STOCK_LOG_MAX_SIZE=100
STOCK_LOG_MAX_BACKUPS=7
STOCK_LOG_MAX_AGE=30
STOCK_LOG_COMPRESS=true

# JWT配置
STOCK_JWT_SECRET=your_jwt_secret_here_change_in_production
STOCK_JWT_EXPIRE_HOURS=24
STOCK_JWT_ISSUER=stock

# 限流配置
STOCK_RATE_LIMIT_ENABLED=true
STOCK_RATE_LIMIT_RPS=100
STOCK_RATE_LIMIT_BURST=200

# 监控配置
STOCK_METRICS_ENABLED=true
STOCK_METRICS_PORT=9090
STOCK_METRICS_PATH=/metrics

# CORS配置
STOCK_CORS_ALLOWED_ORIGINS=*
STOCK_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
STOCK_CORS_ALLOWED_HEADERS=*
STOCK_CORS_ALLOW_CREDENTIALS=true
STOCK_CORS_MAX_AGE=86400

# 数据源配置
# Tushare API配置（如果使用）
TUSHARE_TOKEN=your_tushare_token_here

# 东方财富API配置（如果需要）
EASTMONEY_API_KEY=your_eastmoney_api_key_here

# 通知配置
# 企业微信机器人（如果使用）
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key

# 钉钉机器人（如果使用）
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=your_token

# 邮件通知（如果使用）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com